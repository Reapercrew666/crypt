<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <fadetime>500</fadetime>
            <texture>common/fen_fanart.jpg</texture>
            <animation effect="fade" start="0" end="100" time="300" tween="sine">WindowOpen</animation>
            <animation effect="fade" end="100" time="200" tween="sine">WindowClose</animation>
        </control>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <fadetime>500</fadetime>
            <texture>common/black.png</texture>
            <animation effect="fade" start="0" end="85" time="300" tween="sine">WindowOpen</animation>
            <animation effect="fade" end="85" time="200" tween="sine">WindowClose</animation>
        </control>
        <control type="image">
            <left>20</left>
            <top>20</top>
            <width>60</width>
            <height>60</height>
            <aspectratio aligny="top">keep</aspectratio>
            <texture background="true">common/fen.png</texture>
        </control>
        <control type="image">
            <left>890</left>
            <top>483</top>
            <width>140</width>
            <height>140</height>
            <visible>!Container(5000).OnScrollPrevious + !Container(5000).OnScrollNext</visible>
            <animation effect="fade" time="320" delay="400">Visible</animation>
            <animation effect="rotate" end="360" center="auto" time="1200" loop="true" reversible="false" condition="true">Conditional</animation>
            <texture flipx="true" colordiffuse="FFFAFAFA">common/loading-spinner.png</texture>
            <animation effect="fade" start="70" time="1200" condition="true" pulse="true">Conditional</animation>
        </control>
        <control type="list" id="5000">
            <left>-90</left>
            <top>0</top>
            <width>2100</width>
            <height>1080</height>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <ondown>9001</ondown>
            <animation effect="fade" start="0" end="100" time="300" tween="sine">WindowOpen</animation>
            <animation effect="fade" end="100" time="200" tween="sine">WindowClose</animation>
            <scrolltime tween="sine">400</scrolltime>
            <orientation>Horizontal</orientation>
            <itemlayout height="1080" width="1920">
                <control type="image">
                    <left>90</left>
                    <top>0</top>
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>keep</aspectratio>
                    <fadetime>200</fadetime>
                    <texture>$INFO[ListItem.Property(tikiskins.slideshow.image)]</texture>
                </control>
            </itemlayout>
            <focusedlayout height="1080" width="1920">
                <control type="image">
                    <left>90</left>
                    <top>0</top>
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>keep</aspectratio>
                    <fadetime>200</fadetime>
                    <texture>$INFO[ListItem.Property(tikiskins.slideshow.image)]</texture>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>
