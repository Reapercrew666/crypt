<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">2000</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <fadetime>500</fadetime>
            <texture>common/black.png</texture>
            <animation effect="fade" start="0" end="100" time="300" tween="sine">WindowOpen</animation>
        </control>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <fadetime>500</fadetime>
            <texture>$INFO[Window().Property(fen.fanart)]</texture>
            <animation effect="fade" start="0" end="20" time="300" tween="sine">WindowOpen</animation>
        </control>
        <control type="image">
            <left>545</left>
            <top>460</top>
            <width>140</width>
            <height>140</height>
            <texture flipx="true" colordiffuse="FFFAFAFA">loading-spinner.png</texture>
            <visible>![Control.HasFocus(2000) | Control.HasFocus(2060)]</visible>
            <animation effect="fade" time="320" delay="400">Visible</animation>
            <animation effect="rotate" end="360" center="auto" time="1200" loop="true" reversible="false" condition="true">Conditional</animation>
            <animation effect="fade" start="70" time="1200" condition="true" pulse="true">Conditional</animation>
        </control>
        <control type="image">
            <left>35</left>
            <top>20</top>
            <width>60</width>
            <height>60</height>
            <aspectratio aligny="top">keep</aspectratio>
            <texture background="true">fen-spinner.png</texture>
        </control>
        <control type="label">
            <left>100</left>
            <top>37</top>
            <width max="250">auto</width>
            <height>20</height>
            <font>font10</font>
            <textcolor>white</textcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>[UPPERCASE]$INFO[Window().Property(fen.total_results)] $ADDON[plugin.video.fen 32139][/UPPERCASE]</label>
            <animation effect="fade" start="0" end="100" time="300" tween="sine">WindowOpen</animation>
        </control>
        <control type="image">
            <left>1395</left>
            <top>100</top>
            <width>486</width>
            <height>729</height>
            <aspectratio aligny="top">keep</aspectratio>
            <fadetime>500</fadetime>
            <texture background="true">$INFO[Window().Property(fen.poster)]</texture>
            <animation effect="fade" start="0" end="100" time="300" tween="sine">WindowOpen</animation>
        </control>
        <control type="textbox">
            <left>1395</left>
            <top>855</top>
            <width>486</width>
            <height>185</height>
            <font>font12</font>
            <align>justify</align>
            <aligny>top</aligny>
            <label>$INFO[Window().Property(fen.plot)]</label>
            <textcolor>white</textcolor>
            <selectedcolor>white</selectedcolor>
            <autoscroll time="2000" delay="5500" repeat="5000"></autoscroll>
        </control>
        <control type="fixedlist" id="2000">
            <pagecontrol>2060</pagecontrol>
            <left>35</left>
            <top>85</top>
            <width>1300</width>
            <height>960</height>
            <onup>2000</onup>
            <ondown>2000</ondown>
            <onright>2060</onright>
            <animation effect="fade" start="0" end="100" time="300" tween="sine">WindowOpen</animation>
            <scrolltime tween="sine">200</scrolltime>
            <orientation>Vertical</orientation>
            <focusposition>3</focusposition>
            <movement>4</movement>
            <itemlayout height="120" width="1300">
                <control type="image">
                    <left>0</left>
                    <top>15</top>
                    <width>1300</width>
                    <height>110</height>
                    <texture>common/white.png</texture>
                    <colordiffuse>994a4347</colordiffuse>
                </control>
                <control type="group">
                    <height max="100">auto</height>
                    <width max="160">auto</width>
                    <top>35</top>
                    <left>20</left>
                    <visible>String.IsEmpty(ListItem.Property(fen.perform_full_search))</visible>
                    <control type="label">
                        <font>font14</font>
                        <align>left</align>
                        <aligny>bottom</aligny>
                        <label>[COLOR $INFO[ListItem.Property(fen.highlight)]][B]$INFO[ListItem.Property(fen.quality)][/B][/COLOR]</label>
                    </control>
                    <control type="label">
                        <top>35</top>
                        <font>font10</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        <label>[COLOR $INFO[ListItem.Property(fen.highlight)]][B]$INFO[ListItem.Property(fen.provider)][/B][/COLOR]</label>
                    </control>
                </control>
                <control type="image">
                    <height max="180">auto</height>
                    <width max="180">auto</width>
                    <top>-20</top>
                    <left>-20</left>
                    <align>left</align>
                    <aligny>top</aligny>
                    <texture>common/forward_arrow.png</texture>
                    <visible>!String.IsEmpty(ListItem.Property(fen.perform_full_search))</visible>
                </control>
                <control type="label">
                    <top>30</top>
                    <left>210</left>
                    <width max="1070">auto</width>
                    <height>20</height>
                    <font>font12</font>
                    <textcolor>FF9c9a9b</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(fen.count)]  $INFO[ListItem.Property(fen.name)]</label>
                </control>
                <control type="label">
                    <top>70</top>
                    <left>210</left>
                    <width max="1070">auto</width>
                    <height>40</height>
                    <font>font14</font>
                    <textcolor>FF9c9a9b</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(fen.size_label)] | $INFO[ListItem.Property(fen.source_type)] | $INFO[ListItem.Property(fen.source_site)] | $INFO[ListItem.Property(fen.extra_info)]</label>
                    <visible>String.IsEmpty(ListItem.Property(fen.perform_full_search))</visible>
                </control>
                <control type="label">
                    <top>50</top>
                    <left>210</left>
                    <width max="860">auto</width>
                    <height>40</height>
                    <font>font14</font>
                    <textcolor>FF9c9a9b</textcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(fen.start_full_scrape)]</label>
                    <visible>!String.IsEmpty(ListItem.Property(fen.perform_full_search))</visible>
                </control>
            </itemlayout>
            <focusedlayout height="120" width="1300">
                <control type="group">
                    <left>0</left>
                    <top>15</top>
                    <control type="image">
                        <width>1300</width>
                        <height>110</height>
                        <texture colordiffuse="994a4347">common/white.png</texture>
                        <animation effect="fade" start="100" end="30" time="0" condition="!Control.HasFocus(2000) | Window.IsActive(Contextmenu)">Conditional</animation>
                    </control>
                    <control type="image">
                        <width>1300</width>
                        <height>110</height>
                        <texture colordiffuse="$INFO[ListItem.Property(fen.highlight)]">common/gradient-diffuse-horizontal.png</texture>
                    </control>
                </control>
                <control type="group">
                    <height max="100">auto</height>
                    <width max="160">auto</width>
                    <top>35</top>
                    <left>20</left>
                    <visible>String.IsEmpty(ListItem.Property(fen.perform_full_search))</visible>
                    <control type="label">
                        <font>font14</font>
                        <textcolor>FFdedad1</textcolor>
                        <align>left</align>
                        <aligny>bottom</aligny>
                        <label>[COLOR $INFO[ListItem.Property(fen.highlight)]][B]$INFO[ListItem.Property(fen.quality)][/B][/COLOR]</label>
                    </control>
                    <control type="label">
                        <top>35</top>
                        <font>font10</font>
                        <textcolor>FFdedad1</textcolor>
                        <align>left</align>
                        <aligny>top</aligny>
                        <label>[COLOR $INFO[ListItem.Property(fen.highlight)]][B]$INFO[ListItem.Property(fen.provider)][/B][/COLOR]</label>
                    </control>
                </control>
                <control type="image">
                    <height max="180">auto</height>
                    <width max="180">auto</width>
                    <top>-20</top>
                    <left>-20</left>
                    <visible>!String.IsEmpty(ListItem.Property(fen.perform_full_search))</visible>
                    <align>left</align>
                    <aligny>top</aligny>
                    <texture>common/forward_arrow.png</texture>
                    <visible>!String.IsEmpty(ListItem.Property(fen.perform_full_search))</visible>
                </control>
                <control type="label">
                    <top>30</top>
                    <left>210</left>
                    <width max="1070">auto</width>
                    <height>20</height>
                    <font>font12</font>
                    <textcolor>white</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(fen.count)]  $INFO[ListItem.Property(fen.name)]</label>
                </control>
                <control type="label">
                    <top>70</top>
                    <left>210</left>
                    <width max="1070">auto</width>
                    <height>40</height>
                    <font>font14</font>
                    <textcolor>white</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(fen.size_label)] | $INFO[ListItem.Property(fen.source_type)] | $INFO[ListItem.Property(fen.source_site)] | $INFO[ListItem.Property(fen.extra_info)]</label>
                    <visible>String.IsEmpty(ListItem.Property(fen.perform_full_search))</visible>
                </control>
                <control type="label">
                    <top>50</top>
                    <left>210</left>
                    <width max="860">auto</width>
                    <height>40</height>
                    <font>font14</font>
                    <textcolor>white</textcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(fen.start_full_scrape)]</label>
                    <visible>!String.IsEmpty(ListItem.Property(fen.perform_full_search))</visible>
                </control>
            </focusedlayout>
        </control>
        <control type="scrollbar" id="2060">
            <top>95</top>
            <left>1350</left>
            <width>30</width>
            <height>955</height>
            <texturesliderbackground border="15">scrollbars/scrollbaruni-bg.png</texturesliderbackground>
            <texturesliderbar border="15">scrollbars/scrollbaruni-bar.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="FF9c9a9b" border="15">scrollbars/scrollbaruni-bar-focus.png</texturesliderbarfocus>
            <textureslidernib>scrollbars/scrollbaruni-nib.png</textureslidernib>
            <textureslidernibfocus>scrollbars/scrollbaruni-nib.png</textureslidernibfocus>
            <onleft>2000</onleft>
            <onright>2000</onright>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
            <visible>Control.IsVisible(2000)</visible>
        </control>
    </controls>
</window>
